{% extends 'layout.njk' %}

{% block content %}
  <ul>
    {% for pokemon in list %}
      <li>
        {{ pokemon.name }}
        <ul>
          {% for count in pokemon.counts %}
            {% set fastMove = count.fastMove %}
            <li>
              [{{ fastMove.type }}]
              [{{ fastMove.turns }}]
              {{ fastMove.name }}
              (+{{ fastMove.energy }})
              <ul>
                {% for chargedMove in count.chargedMoves %}
                  <li>
                    [{{ chargedMove.type }}]
                    [{{ chargedMove.counts }}]
                    {{ chargedMove.name }}
                    ({{ chargedMove.energy }})
                  </li>
                {% endfor %}
              </ul>
            </li>
          {% endfor %}
        </ul>
      </li>
    {% endfor %}
  </ul>
{% endblock %}
